@model DatPhongDiWeb.Models.Customer.SaveCustomerReq
@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Customer Infomation</title>
    <link rel="stylesheet" href="~/css/payment.css">
