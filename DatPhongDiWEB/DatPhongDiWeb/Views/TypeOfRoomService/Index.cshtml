@{
    ViewData["Title"] = "TypeOfRoom Service page";
    Layout = "_LayoutAdmin";
}
<div class=" row text-center">
    <a href="javascript:void(0);" class="btn btn-info" 
       onclick="typeOfRoomService.openModal()">Thêm dịch vụ phòng</a>

    <table id="tbTypeOfRoomService" class="table table-bordered mt-2">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Tên dịch vụ</th>
                <th>Tên loại phòng</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
<!-- The Modal -->
<div class="modal" id="addEditTypeOfRoomServiceModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title"><strong>THÊM PHÒNG</strong></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form id="frmAddEditTypeOfRoomService">
                    <input hidden name="Id" id="Id" value="0" />

                    <div class="row form-group">
                        <label for="ServiceId" class="col-3"><strong>Dịch vụ:</strong></label>
                        <div class="col-9">
                            <p id="ServiceId"></p>
                        </div>
                    </div>

                    <div class="row form-group">
                        <label for="TypeOfRoomId" class="col-3"><strong>Loại phòng:</strong></label>
                        <div class="col-9">
                            <select class="form-control" id="TypeOfRoomId" name="TypeOfRoomId">
                            </select>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <a href="javascript:void(0);" class="btn btn-success" onclick="typeOfRoomService.save()">Save</a>
                <button id="Close" type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/TypeOfRoomService.js" asp-append-version="true"></script>
}