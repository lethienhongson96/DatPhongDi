            <input id="column-left" type="text" required="required" placeholder="Phone" asp-for="@Model.PhoneNum" />
            <input id="column-right" type="text" required="required" placeholder="Address" asp-for="@Model.Address" />
            <input id="input-field" type="text" required="required" placeholder="Country" asp-for="@Model.Country" />
            <input id="input-field" type="text" required="required" placeholder="Passport" asp-for="@Model.Passport" />


